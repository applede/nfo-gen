font-size = 28px
margin-top = 15px
height-plus = 3

name-font()
  font-size font-size
  font-weight bold

.display
  name-font()
  margin-top margin-top
  margin-bottom 20px

#section-name-input
  name-font()
  height font-size + height-plus
  margin-top margin-top - height-plus - 8
  margin-left -7px

.folder-list
  padding 5px

.folder-name
  float left

.folder-remove
  float right

.folder-add
  float none

.bottom-align
  display inline-block
  vertical-align bottom

.item-list {
  width: 400px;
  margin: 0px 0 0;
  padding: 0;
  background-color: #fff;
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
  -webkit-box-shadow: 0 1px 4px rgba(0,0,0,.065);
     -moz-box-shadow: 0 1px 4px rgba(0,0,0,.065);
          box-shadow: 0 1px 4px rgba(0,0,0,.065);
}
.item-list > li > a {
  display: block;
  margin: 0 0 -1px;
  padding: 4px 14px;
  border: 1px solid #e5e5e5;
}
.item-list > li:first-child > a {
  -webkit-border-radius: 6px 6px 0 0;
     -moz-border-radius: 6px 6px 0 0;
          border-radius: 6px 6px 0 0;
}
.item-list > li:last-child > a {
  -webkit-border-radius: 0 0 6px 6px;
     -moz-border-radius: 0 0 6px 6px;
          border-radius: 0 0 6px 6px;
}
.item-list > .active > a {
  position: relative;
  z-index: 2;
  padding: 9px 15px;
  border: 0;
  text-shadow: 0 1px 0 rgba(0,0,0,.15);
  -webkit-box-shadow: inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1);
     -moz-box-shadow: inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1);
          box-shadow: inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1);
}
/* Chevrons */
.item-list .icon-remove
  float: right;
  margin-top: 3px;
  margin-right: -6px;
  opacity: .25;

.item-list .icon-plus
  opacity: .25

.item-list > li > a:hover
  background-color: #fff;

.item-list a:hover .icon-remove,
.item-list a:hover .icon-plus {
  opacity: .5;
}
.item-list .active .icon-remove,
.item-list .active a:hover .icon-remove {
  background-image: url(/packages/bootstrap/img/glyphicons-halflings-white.png);
  opacity: 1;
}
.item-list.affix {
  top: 40px;
}
.item-list.affix-bottom {
  position: absolute;
  top: auto;
  bottom: 270px;
}
