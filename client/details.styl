@import "common"

font-size = 28px
margin-top = 15px
height-plus = 3

name-font()
  font-size font-size
  font-weight bold

.display
  name-font()
  margin-top margin-top
  margin-bottom 20px

#section-name-input
  name-font()
  height font-size + height-plus
  margin-top margin-top - height-plus - 8
  margin-left -7px

.grey-button
  vertical-align bottom
  opacity normal-opacity

.grey-button:hover
  opacity over-opacity
