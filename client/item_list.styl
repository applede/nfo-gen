@import "common"

.item-list-container
  margin 15px

.item-list {
  width: 400px;
  margin: 0px 0 0;
  padding: 0;
  background-color: #fff;
  -webkit-border-radius: 6px;
     -moz-border-radius: 6px;
          border-radius: 6px;
  -webkit-box-shadow: 0 1px 4px rgba(0,0,0,.065);
     -moz-box-shadow: 0 1px 4px rgba(0,0,0,.065);
          box-shadow: 0 1px 4px rgba(0,0,0,.065);
}
.item-list > li > a {
  display: block;
  margin: 0 0 -1px;
  padding: 4px 14px;
  border: 1px solid #e5e5e5;
}
.item-list > li:first-child > a
  border-top()

.item-list > li:last-child > a
  border-bottom()

.item-list > .active > a {
  position: relative;
  z-index: 2;
  padding: 9px 15px;
  border: 0;
  text-shadow: 0 1px 0 rgba(0,0,0,.15);
  -webkit-box-shadow: inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1);
     -moz-box-shadow: inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1);
          box-shadow: inset 1px 0 0 rgba(0,0,0,.1), inset -1px 0 0 rgba(0,0,0,.1);
}
/* remove button */
.item-list .icon-remove
  float: right;
  margin-top: 3px;
  margin-right: -6px;
  opacity: normal-opacity

.item-list .icon-plus
  opacity: normal-opacity

.item-list > li > a:hover
  background-color: #fff;

.item-list a:hover .icon-remove,
.item-list a:hover .icon-plus
  opacity over-opacity

.item-list .active .icon-remove,
.item-list .active a:hover .icon-remove {
  background-image: url(/packages/bootstrap/img/glyphicons-halflings-white.png);
  opacity: 1;
}
.item-list.affix {
  top: 40px;
}
.item-list.affix-bottom {
  position: absolute;
  top: auto;
  bottom: 270px;
}
